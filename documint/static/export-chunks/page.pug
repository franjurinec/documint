doctype html
html(lang="en" class="h-full w-full")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{projectTitle + ' - ' + pageTitle}
    link(rel="stylesheet" href="../styles/fontawesome.css")
    link(rel="stylesheet" href="../styles/style.css")
    style
      include scrollbar.css

  body(class="h-full w-full")
    div(class="flex flex-row justify-center w-full h-full bg-gray-100 overflow-hidden")
      div(class="w-72 flex-shrink-0 max-h-full overflow-y-auto flex flex-col gap-2 p-2 pt-4 ml-4 items-start")
        div(class="flex flex-row select-none gap-1 w-full items-center text-lg pb-2 border-b border-gray-900 font-medium") #{projectTitle}
        each fileName in fileNames
          a(href=fileName+'.html')
            div(class="flex flex-row gap-1 select-none w-full items-center hover:text-gray-400 truncate") #{fileName}
      div(class="max-w-screen-lg flex-grow bg-white flex flex-col")
        div(class="prose max-w-full w-full flex-grow overflow-y-auto p-8") !{content}
      div(class="w-72 max-h-full overflow-y-auto hidden flex-col items-end 2xl:flex")
