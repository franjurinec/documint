{
  "name": "documint",
  "version": "0.0.1",
  "description": "Cross-platform documentation tool.",
  "main": "app/main/main.js",
  "repository": "https://github.com/franjurinec/documint",
  "author": "Fran Jurinec",
  "license": "MIT",
  "scripts": {
    "build": "sass sass/base.sass:styles/style.css & tsc",
    "start": "yarn build && electron .",
    "dist": "yarn build && electron-builder build"
  },
  "build": {
    "appId": "com.franjurinec.documint",
    "win": {
      "target": "portable"
    },
    "files": [
      "./app/**",
      "./views/**",
      "./styles/**",
      "./static/**"
    ],
    "extraResources": {
      "from": "./resources",
      "to": "./"
    }
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "sass": "^1.32.8",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
